# Template file for 'elephant-desktopapplications'
pkgname=elephant-desktopapplications
version=2.7.2
revision=1
build_wrksrc="internal/providers/desktopapplications"
hostmakedepends="go"
short_desc="Desktopapplications provider for elephant"
maintainer="ItsLemmy <studio@quadbyte.net>"
license="GPL-3.0-or-later"
homepage="https://github.com/abenz1267/elephant"
distfiles="${homepage}/archive/refs/tags/v${version}.tar.gz"
checksum=54ed8a3043e26c671c34e9bb312d6b91835571845a4c47a76d083c4f5c9d5edc

do_build() {
    go build -buildvcs=false -buildmode=plugin -trimpath
}

do_install() {
    vinstall desktopapplications.so 755 etc/xdg/elephant/providers
    vlicense ${wrksrc}/LICENSE
}